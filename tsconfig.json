{
  "compilerOptions": {
    "target": "ES2020",       // Target ESNext for modern features
    "module": "Node16",     // Output CommonJS for Node.js compatibility
    "strict": true,           // Enable strict type checking
    "esModuleInterop": true,  // Enable ES module interop
    "forceConsistentCasingInFileNames": true, // Ensure consistent file names
    "outDir": "./dist",       // Output directory for compiled files
    "rootDir": "./src",       // Source directory for TypeScript files
    "declaration": true,      // Generate type declaration files
    "declarationDir": "./dist", // Directory for declaration files
    "sourceMap": true,         // Generate source maps for debugging
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
